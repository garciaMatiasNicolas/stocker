<div class="bg-light d-flex flex-column justify-content-between align-items-start h-100 w-75 rounded">
    <div class="border-bottom p-2 w-100">
        <h3 class="text-info">CHAT</h3>
        <input class="w-50" id="author" type="email" placeholder="put your mail here">
    </div>

    <div class="p-2" id="chat">
        <h3 class="fs-5">There's nothing here!</h3>
    </div>

    <form id="formChat" class="align-items-end d-flex w-100 h-100">
        <div class="p-2 d-flex align-items-center justify-content-between mb-3 w-50" >
            <input autocomplete="off" id="message" class="w-75" type="text" placeholder="Write your messagge...">
            <button id="btn-chat" type="button" class="btn-sm btn btn-danger">Send</button>
        </div>
    </form>
</div>